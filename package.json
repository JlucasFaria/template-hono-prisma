{
  "name": "template-hono-prisma",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:all": "bun run db:up && bun run dev",
    "start": "bun src/index.ts",
    "db:up": "docker compose up -d",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down",
    "db:migrate": "bunx prisma migrate dev",
    "db:generate": "bunx prisma generate",
    "db:studio": "bunx prisma studio",
    "db:reset": "docker compose down -v && docker compose up -d && bunx prisma migrate dev"
  },
  "devDependencies": {
    "@prisma/config": "^7.2.0",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.2.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "hono": "^4.11.1",
    "pg": "^8.16.3"
  }
}
